<div class="container">
  <h2>Rent Instrument</h2>

  <%= simple_form_for @instrument do |f| %>
    <%= f.input :name, label: "Name" %>
    <%= f.input :category, collection: [ "Piano", "Guitar", "Violin", "Flute", "Drums", "Other" ] %>
    <%= f.input :description, label: "Description" %>
    <%= f.input :location, collection: [ "Montreal", "Sherbrooke", "Quebec City", "Toronto", "Vancouver" ]  %>
    <%= f.input :price, label: "Price" %>
    <%= f.submit "Add instrument", class:"btn btn-primary" %>
  <% end %>
</div>
